<?xml version="1.0" encoding="utf-8"?>
<com.yang.wanandroid.common.widget.OhRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="48dp"
    android:paddingTop="24dp"
    android:paddingEnd="48dp"
    android:paddingBottom="24dp"
    app:oh_backgroundColor="@color/bgColorPrimary"
    app:oh_radius="4dp">

    <androidx.core.widget.ContentLoadingProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/loading"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp" />
</com.yang.wanandroid.common.widget.OhRoundLinearLayout>